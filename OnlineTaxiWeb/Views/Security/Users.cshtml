@model UsersDTO

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-dark">
    <thead>
        <tr>
            <th>نام کاربری</th>
            <th>فعال</th>
            <th>ادممین</th>
            <th>عملیات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Users)
        {
            <tr>
                <td>
                    @item.Username
                </td>
                <td>
                    @if (item.IsActive)
                    {
                        <img src="~/img/true.png" width=20px height=20px>
                    }
                    else
                    {
                        <img src="~/img/false.png" width=20px height=20px>
                    }
                </td>
                <td>
                    @if (item.IsAdmin)
                    {
                        <img src="~/img/true.png" width=20px height=20px>
                    }
                    else
                    {
                        <img src="~/img/false.png" width=20px height=20px>
                    }
                </td>
                <td>
                    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown"
                        aria-haspopup="true" aria-expanded="false">
                        انتخاب
                    </button>
                    <div class="dropdown-menu shadow animated--grow-in">
                        @foreach (var link in Model.Actions)
                        {
                            <a style='margin-right:16px' class="dropdown-item" onclick="@link.OnClickFunction (@item.Id)">
                                @link.Title
                            </a>
                        }
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

